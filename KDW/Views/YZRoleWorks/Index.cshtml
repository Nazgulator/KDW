@model IEnumerable<KDW.Models.YZRoleWorks>

@{
    ViewBag.Title = "Index";
}

<h2>Главная</h2>

<p>
    @Html.ActionLink("Создать", "Create", null, new { @class = "btn btn-success btn-block" })
</p>

<link href="https://unpkg.com/bootstrap-table@1.18.3/dist/bootstrap-table.min.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.6.0.js"></script>
<script src="https://unpkg.com/bootstrap-table@1.18.3/dist/bootstrap-table.min.js"></script>
<script src="https://unpkg.com/bootstrap-table@1.18.3/dist/extensions/filter-control/bootstrap-table-filter-control.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.18.3/extensions/filter-control/utils.min.js"></script>
<table id="T" class="table table-bordered table-striped"
       data-toggle="table"
       data-filter-control="true">
    <thead>
        <tr>
            <th data-field="Role" data-filter-control="input" data-sortable="true">
                Роль
            </th>
            <th data-field="Work" data-filter-control="input" data-sortable="true">
                Работа
            </th>
            <th data-field="Department" data-filter-control="input" data-sortable="true">
                Подразделение
            </th>
            <th data-field="User" data-filter-control="input" data-sortable="true">
                Пользователи назначенные
            </th>
            <th></th>
        </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.YZRoles.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YZWorks.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.YZWorks.t_Department.FName)
                </td>
                <td>
                    <table class="table table-bordered table-striped">
                        @foreach (var u in item.YZRoles.YZUserRoles)
                        {

                            <tr>
                                <td>
                                    @u.YZUsers.Name
                                </td>
                            </tr>
                        }
                    </table>
                    </td>
                <td>
                    @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

</table>
<p><a href="/Home/YZ" class="btn btn-success btn-block">В главное меню &raquo;</a> </p>
