    {
             var url2 = "@Url.Action("SkipWorkJson", "POOrderEntries")?Id=" + id ;

        $.post
            (url2, function (data)
        {
                var S = data.split(';');
              
                if (S[0] == "Ok")
                {
                    alert("@Resources.Resource.Ok");
                    location.reload();


                }
                else
                {
                    alert(data);
                   
                  //  location.reload();
                }

           



        }

            );

    }

   
</script>