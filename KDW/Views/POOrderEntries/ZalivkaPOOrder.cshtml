

<center>
    @if (ViewBag.Result != null && ViewBag.Result.Count > 0)
    {
        <table>
            @foreach (string S in ViewBag.Result)
            {
                <tr>
                    <td>
                        <button class="btn btn-success btn-block">@S</button>
                    </td>
                </tr>
            }
        </table>
    }
    @if (ViewBag.Errors != null && ViewBag.Errors.Count > 0)
    {
        <table>
            @foreach (string S in ViewBag.Errors)
            {
                <tr>
                    <td>
                        <button class="btn btn-danger btn-block">@S</button>
                    </td>
                </tr>
            }
        </table>
    }
</center>

