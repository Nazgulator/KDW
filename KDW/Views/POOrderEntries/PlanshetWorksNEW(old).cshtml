@model IEnumerable<KDW.Models.PPBOMEntry>


<center>
    <h2>@Resources.Resource.TochkaVipuska </h2>

</center>



<p><a href="/Home/Index" class="btn btn-success btn-block">@Resources.Resource.VGlavnoeMenu &raquo;</a> </p>

<!-- Modal -->
