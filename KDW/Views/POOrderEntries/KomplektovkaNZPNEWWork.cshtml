                        PartNumber.val(S[0]);
                        $("#ScanQR1").val("");
                        $("#StockID").val(parseInt(S[1]));
                        $('#QRShowModal').modal('hide');
                    }

                    LoadVedomost();
                }

                );
        }
    }
</script>

