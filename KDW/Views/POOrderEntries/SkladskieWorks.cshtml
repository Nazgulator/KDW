<script>
    function FindNumber() {
        var Number = $('#FindPartNumber').val();
        $.each($(".table").find("tr"), function () {

            if ($(this).text().toLowerCase().replace(/\s+/g, '').indexOf(Number.replace(/\s+/g, '').toLowerCase()) == -1)
                $(this).hide();
            else
                $(this).show();
        });
   
    }
</script>
