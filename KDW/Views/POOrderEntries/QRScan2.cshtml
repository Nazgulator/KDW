        var QTY = $('#QTY').val();




        var url2 = '@Url.Action("PeremeshenieSoSkladaNaSklad", "POOrderEntries", new { ItemID = Model.Item.FItemID, QTY = Model.QTY, StockFrom = Model.Stock.FItemID })';
