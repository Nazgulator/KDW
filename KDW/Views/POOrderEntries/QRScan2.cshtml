@model KDW.Models.ItemView

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<Center>
    <h2>@Resources.Resource.Info</h2>
</Center>



@if (ViewBag.Message != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
    </script>
}

<style>
    .description {
        width: 280px;

        word-wrap: break-word;
        word-break: break-all;
        font-size: 10px
    }

    .allwidth {
        min-width: 280px;
        
    }
</style>
@{
    decimal QTYSklad = Math.Round(ViewBag.QTYNaSklade, 2);
    string NomenklaturaName = Model.Item.FName;

}

<table id="T" class="table table-bordered table-striped">


    <tr>
        <th>
            @Resources.Resource.NaimenovanieIPartNomer
        </th>
    </tr>
    <tr>
        <td>
            <div class=" btn btn-block btn-default ">@Model.Item.FNumber  </div>
        </td>

    </tr>
    <tr>
        <td>
            <center>
                <div class=" description "> @Model.Item.FName</div>
            </center>
        </td>

    </tr>
    <tr>





        <th>
            @Resources.Resource.NahoditsaNaSklade
        </th>
    </tr>
    <tr>
        <td>
            <div class="btn btn-default btn-block allwidth">@Model.Stock.FName</div>
        </td>



    </tr>
    <tr>

        <th>
            @Resources.Resource.QTYNaSklade
        </th>
    </tr>
    <tr>
        <td>
            <button class="btn btn-default btn-block allwidth">  @QTYSklad </button>
        </td>



    </tr>

    <tr>

        <th>
            @Resources.Resource.QTYPostupleniya
        </th>
    </tr>
    <tr>
        <td>
            <input value="@Model.QTY" id="QTY" class="form-control btn btn-default " />
        </td>



    </tr>

    <tr>
        <td>
            <button class="btn btn-block btn-default"> @Resources.Resource.VosmognieDeistviya </button>
        </td>
    </tr>

    <tr>
        <td>
            <a href="@Url.Action("PeremeshenieSoSkladaNaSklad", "POOrderEntries", new { ItemID = Model.Item.FItemID, QTY = Model.QTY, StockFrom = Model.Stock.FItemID })" class="btn  btn-success btn-block allwidth">@Resources.Resource.PeremestitNaDrugoiSklad</a>
        </td>
    </tr>
    <tr>
        <td>
            @Html.ActionLink(Resources.Resource.PeremeshenieNaProizvodstvo, "PeremeshenieNaProizvodstvo", new { ItemID = Model.Item.FItemID, QTY = Model.QTY, StockFrom = Model.Stock.FItemID }, new { @class = "btn btn-success btn-icon glyphicon glyphicon-chevron-left" })
        </td>
    </tr>
    <tr>
        <td>
            <a href="/Home/Index" class="btn btn-success btn-block allwidth">@Resources.Resource.VGlavnoeMenu &raquo;</a>
        </td>
    </tr>


</table>

<p> </p>

