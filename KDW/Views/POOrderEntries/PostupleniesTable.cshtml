@model IEnumerable<KDW.Models.ICStockBillEntry>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




@if (ViewBag.Message != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
    </script>
}
<link href="https://unpkg.com/bootstrap-table@1.18.3/dist/bootstrap-table.min.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.6.0.js"></script>
<script src="https://unpkg.com/bootstrap-table@1.18.3/dist/bootstrap-table.min.js"></script>
<script src="https://unpkg.com/bootstrap-table@1.18.3/dist/extensions/filter-control/bootstrap-table-filter-control.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.18.3/extensions/filter-control/utils.min.js"></script>


<table id="T" class="table table-bordered table-striped"
       data-toggle="table"
       data-filter-control="true">
    @if (Model != null)
    {
        <thead>
            <tr>
                <th data-field="Postavshik" data-filter-control="input" data-sortable="true">
                    @Resources.Resource.Postavshik
                </th>
                <th data-field="Zakaz" data-filter-control="input" data-sortable="true">
                    @Resources.Resource.ZakazPostavshiku
                </th>
                <th data-field="Document" data-filter-control="input" data-sortable="true">
                    @Resources.Resource.MyDocs
                </th>
                <th data-field="PartNumber" data-filter-control="input" data-sortable="true">
                    @Resources.Resource.PartNumber
                </th>
                <th data-field="Nomenklatura" data-filter-control="input" data-sortable="true">
                    @Resources.Resource.Nomenklatura
                </th>
                <th data-field="Stock" data-filter-control="input" data-sortable="true">
                    @Resources.Resource.Stock
                </th>
                <th data-field="KolvoNaSklade" data-filter-control="input" data-sortable="true">
                    @Resources.Resource.QTYFact
                </th>
                <th data-field="Date" data-filter-control="input" data-sortable="true">
                    @Resources.Resource.Date
                </th>


            </tr>


        </thead>

        foreach (var item in Model)
        {
<tr>

    <th>
        @try
        {
            @item.POOrder.t_Supplier.FName;
        }
        catch
        {

        }
    </th>
    <th>
        @try
        {
            @item.POOrder.FBillNo
        }
        catch
                    {

                    }
        </th>
    <th>

        @Html.DisplayFor(ModelItem => item.ICStockBill.FBillNo)
    </th>
    <th>

        @Html.DisplayFor(ModelItem => item.t_Item.FNumber)
    </th>
    <th>
        @Html.DisplayFor(ModelItem => item.t_Item.FName)
    </th>
    <th>
        @item.t_StockTo.FName
    </th>
    <th>
        @Html.DisplayFor(ModelItem => item.FQty)
    </th>
    <th>
        @item.ICStockBill.FDate.Value.ToString("yyyy/MM/dd")
    </th>


</tr>
        }
    }

</table>
<p><a href="/Home/Index" class="btn btn-success btn-block">@Resources.Resource.VGlavnoeMenu &raquo;</a> </p>
