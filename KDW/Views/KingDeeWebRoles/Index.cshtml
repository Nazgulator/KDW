@model IEnumerable<KDW.Models.KingDeeWebRoles>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Главная</h2>

<p>
    @Html.ActionLink("Создать", "Create", null, new {@class = "btn btn-success btn-block"})
</p>
<table id="T" class="table table-bordered table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DateNaznacheniya)
        </th>
        <th>
            Пользователь
        </th>
        <th>
           Роль
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.DateNaznacheniya)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.UsersKDW.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.WebRoles.Name)
    </td>

    <td>
        @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
<p><a href="/Home/Index" class="btn btn-success btn-block">В главное меню &raquo;</a> </p>
